<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level [${spring:spring.application.name}/%c{1}#%M/%L/%X{traceId}/%X{spanId}]: %msg\n"/>
        </Console>
        <Kafka name="Kafka" topic="microservice-log" syncSend="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level [${spring:spring.application.name}/%c{1}#%M/%L/%X{traceId}/%X{spanId}]: %msg"/>
            <Property name="bootstrap.servers">${env:SPRING_KAFKA_PRODUCER_BOOTSTRAP_SERVERS}</Property>
        </Kafka>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Kafka"/>
        </Root>
        <Logger name="org.apache.kafka" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>